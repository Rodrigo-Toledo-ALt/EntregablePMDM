            android:src="@drawable/pedro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nombre"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.163"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView

            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="76dp"
            android:text="Jose Pedro Pascual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.218" />

        <TextView

            android:id="@+id/Descripcion"
            android:layout_width="325dp"
            android:layout_height="170dp"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="332dp"
            android:lines="20"
            android:text="Esta es la descripci칩n de Jose Pedro Pascual, actual regente de la empresa de desarrollo de software, con m치s de 10 a침os de experiencia en el sector. Sigue siendo uno de los hombres m치s interesantes de este pais."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.297"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>